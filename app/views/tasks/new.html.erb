<h1>New Task</h1>
<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.check_box :completed, {}, true, false %>
</div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<br>
<br>
<%= link_to "Back to task list", tasks_path %>
